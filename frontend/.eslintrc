{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "$": true,
    "Vue": true,
    "hljs": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-bitwise": "warn",
    "camelcase": "warn",
    "brace-style": ["warn", "1tbs"],
    "curly": ["warn", "all"],
    "eqeqeq": ["warn", "smart"],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-use-before-define": [
      "warn",
      {
        "functions": false
      }
    ],
    "new-cap": "warn",
    "no-caller": "warn",
    "quotes": [
      "warn",
      "double"
    ],
    "no-unused-vars": "warn",
    "strict": [
      "warn",
      "function"
    ],
    // Additional relaxed rules
    "no-var": "off",
    "prefer-const": "off",
    "no-undef": "warn",
    "no-prototype-builtins": "off",
    "no-useless-escape": "off"
  }
}
